@import "settings";
.openstack-client-terminal {
  height: 70vh;
  width: 100%;
  font-size: 14px;
  min-width: 1800px;
  color: white;
}

.openstack-client-terminal .terminal-output {
  padding-top: 20px;
}

.openstack-client-terminal span  {
  font-size: 14px;
  color: white;
}

.terminal-help {
  height: 100%;
  padding: 10px;
  border-radius: 5px;
  margin-bottom: 10px;
}

.terminal-help .command-example {
  margin: 10px;
}

.terminal-help .command-example .small {
  padding: 10px;
}

.buttons-right {
  display: flex;
  justify-content: flex-end;
}

.term-buttons {
  opacity: 0.85;
  font-size: 8px;
  position: relative;
  background: #000;
  padding: 5px;
  margin: -10px;
  z-index: 100;
}

.term-buttons a {
  margin-right: 2px;
  font-size: 8px;
}

.terminal-responsive {
  overflow-x: auto;
  min-height: 0.01%;
  box-shadow: 0px 0px 20px #acacac;
}

.example-commands {
  overflow-y: auto;
}

.example-commands::-webkit-scrollbar {
  -webkit-appearance: none;
}

.example-commands::-webkit-scrollbar:vertical {
  width: 6px;
}

.example-commands::-webkit-scrollbar:horizontal {
  height: 6px;
}

.example-commands::-webkit-scrollbar-thumb {
  border-radius: 6px;
  background-color: rgba(0, 0, 0, .3);
}

.example-commands .highlight {
  font-weight: normal;
}

.read-more {
  margin-top: 5px;
  display: flex;
  justify-content: space-between;
  color: #B66B39;
}

.read-more a {
  text-decoration: underline;
  color: #B66B39;
}

.read-more i {
  color: black;
}

.read-more .tiny {
  font-size: 11px;
}

.project-select .tiny {
  font-size: 11px;
}

img.vagrant-icon {
  height: 12px;
  width: auto;
  -webkit-filter: grayscale(100%);
  filter: grayscale(100%);
  -webkit-filter: brightness(0.25);
  filter: brightness(0.25);
}

.terminal .terminal-output div div {
  display: block;
  line-height: 14px;
  height: auto;
  margin-top: 2px;
}

kbd {
  padding: 2px 4px;
  font-size: 1em;
  font-size: 90%;
  color: #fff;
  background-color: #333;
  border-radius: 3px;
  -webkit-box-shadow: inset 0 -1px 0 rgba(0,0,0,.25);
  box-shadow: inset 0 -1px 0 rgba(0,0,0,.25);
  font-family: monospace,monospace;
  font-family: Menlo,Monaco,Consolas,"Courier New",monospace;  
}

kbd kbd {
  padding: 0;
  font-size: 100%;
  font-weight: 700;
  -webkit-box-shadow: none;
  box-shadow: none;
}

.browser-terminal .modal-dialog {
  width: 60%;
}

.shortcuts {
  font-size: 14px;
}

.shortcuts p.shortcut {
  font-family: monospace,monospace;
  font-family: Menlo,Monaco,Consolas,"Courier New",monospace; 
}

.shortcuts-link a {
  color: #B66B39;
}

.browser-terminal #left {
  height: 75vh;
}

.browser-terminal #right {
  height: 75vh;
}

@keyframes slide {
  0% {
    transform: translate(-300px, 0);
  }
  
  100% {
    transform: translate(2000px, 0);
  }
}

.nyan {
  height: auto;
  margin: 30px;
  animation: slide 5s linear infinite;
}

i#command-processing {
  color: #888;
}

@media only screen and (max-width: 480px), only screen and (max-device-width: 480px) {
  .terminal-responsive {
    overflow-x: auto;
    min-height: 0.01%;
  }
}

@media only screen and (max-width: 992px), only screen and (max-device-width: 992px) {
  div.project-select div.form-group {
    width: 100%;
  }
  div.project-select div.form-inline {
    width: 100%;
  }
  div.project-select select.projects {
    width: 100%;
  }
  div.project-select {
    margin-top: 15px;
  }
  .shortcuts-link {
    display: none;
  }
  .browser-terminal #left {
    height: 30vh;
  }
}