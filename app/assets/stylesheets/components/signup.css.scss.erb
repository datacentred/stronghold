.container#sign-up {
  width: 60%;
  // overflow: auto;
  margin: auto;
  margin-top: 30px;
  top: 0; left: 0; bottom: 0; right: 0;
}

.g-recaptcha {
  margin-bottom: 15px;
  transform: scale(0.9);
  transform-origin: 0 0;
  -webkit-font-smoothing: antialiased;
}

.container#sign-in input {
  height: 50px;
  font-size: 22px;
  padding: 10px;
}

img.sign-in-logo {
  height: auto;
  width: 200px;
  margin-left: auto;
  margin-right: auto;
  display: block;
  opacity: 0.8;
  margin-top: 30px;
}

@media only screen and (max-width: 480px), only screen and (max-device-width: 480px) {
  .container#sign-in {
    width: 90%
  }

  img#horizon, img#cloud-symbol {
    display: none;
  }

  img.sign-in-logo {
    width: 240px;
  }
}

img#horizon {
  height: auto;
  width: 480px;
}

div#horizon {
  margin-left: auto;
  margin-right: auto;
  width: 480px;
}

div#sign-up ol.breadcrumb {
  //background: #dff0d8;
}

div#signup-form-area i {
  color: #0af;
}

div#signup-form-area .thank-you {
  text-align: center;
  margin-bottom: 30px;
}

#signup-form-area .wider {
  width: 70%;
}

div#card-display {
  transform: scale(0.8,0.8);
}

#cc-details input {
  height: 45px;
}

select#address_country {
  height: 46px;
}

ul.flags {
  margin: 0px;
}

#cc-details input#complete-signup {
  margin-top: 25px;
  width: 300px;
  height: 55px;
  margin-bottom: 10px;
}

#cc-details input#card_number {
  width: 78%;
  font-size: 18px;
}

#cc-details input#expiry {
  font-size: 14px;
  float: right;
}

#cc-details input#name {
  font-size: 16px;
}

#cc-details input#cvc {
  width: 20%;
  font-size: 16px;
  float: right;
}

#cc-details .inline input {
  display: inline;
}

#cc-details .inline-form-groups .form-group {
  display: inline-block;
}

#cc-details .form-group#expiry {
  float: right;
  width: 29%;
}

#cc-details .form-group#name {
  width: 70%;
}

#lookup-field input, #lookup-field select {
  display: inline-block;
  width: 50%;
  height: 34px;
  padding: 6px 12px;
  font-size: 16px;
  line-height: 1.428571429;
  color: #555555;
  background-color: white;
  background-image: none;
  border: 1px solid #cccccc;
  border-radius: 2px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  -webkit-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
  -o-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
  transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
}

#lookup-field #idpc_input {
  width: 50%;
  margin-right: 5px;
}

#lookup-field #idpc_dropdown {
  width: 100%;
  margin-top: 10px;
}

#lookup-field button {
  color: #333333;
  background-color: white;
  float: right;
  display: inline-block;
  margin-bottom: 0;
  font-weight: normal;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  background-image: none;
  border: 1px solid #adadad;
  white-space: nowrap;
  padding: 6px 6px;
  font-size: 12px;
  line-height: 1.7;
  border-radius: 2px;
  -webkit-user-select: none;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

#lookup-field button:hover, #lookup-field button:active {
  color: #333333;
  background-color: #e6e6e6;
  border-color: #adadad;
}

div.powered-by-stripe {
  margin-top: 10px;
  float: right;
}

div.powered-by-stripe  img {
  width: 100px;
  height: auto;
}


div.info-panel .alert {
  padding-right: 20px;
  padding-left: 0px;
  font-size: 15px;
}

div.info-panel .alert ul {
 list-style-type: square;
}

p.recaptcha_error {
  display: none;
}


#signup-form-area .jumbotron p {
  font-size: 12px;
  font-weight: 200;
}

div#signup-proceed-button {
  float: right;
  height: 5px;
}

#signup-proceed-button input {
  height: 68px !important;
  width: 130px !important;
  font-size: 20px !important;
  padding: 10px !important;
  top: -93px;
  position: relative;
}

@media only screen and (max-width: 585px), only screen and (max-device-width: 585px) {
  div#signup-proceed-button {
    float: none;
    height: 90px;
  }

  #signup-proceed-button input {
    height: 76px !important;
    width: 100% !important;
    font-size: 22px !important;
    padding: 25px !important;
    margin-bottom: 15px;
    position: initial;
  }
}