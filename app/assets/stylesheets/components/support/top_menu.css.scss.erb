@import "settings";

.top-menu {
  margin-top: 10px;
  margin-left: auto;
  margin-right: auto;
  width: 60%;
  text-align: center;
}

div.top-menu-option {
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 8px;
  text-align: center;
  cursor: pointer;
  width: 12%;
  float: left;
}

div.top-menu-option-disabled {
  cursor: not-allowed;
  opacity: 0.5;
}

div.top-menu-option:hover, div.top-menu-option:active {
  border-bottom: solid 3px $headings-color;
}

div.top-menu-option.selected {
  border-bottom: solid 3px $headings-color;
}

div.top-menu a {
  text-decoration: none;
  color: $headings-color;
}

div.top-menu-option a:hover, div.top-menu-option a:active {
  color: $headings-color;
}

i.top-menu-icon {
  font-size: 1.7em;
}

.top-menu img {
  vertical-align: top;
  height: 25px;
  width: auto;
}

.logo {
  float: left;
  margin-right: 10px;
  margin-top: 8px;
  background-image: url(<%= asset_path 'logo_long.png' %>);
  height: 37px;
  width: 138px;
}

@media only screen and (max-width: 480px), only screen and (max-device-width: 480px) {
  .top-menu {
    opacity: 0.0;
  }
}

@media only screen and (max-width: 720px), only screen and (max-device-width: 720px) {
  .logo {
    background-image: url(<%= asset_path 'logo_long.png' %>);
      height: 30px;
      width: 30px;
  }
}
