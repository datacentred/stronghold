@import "settings";

.top-menu {
  margin-left: auto;
  margin-right: auto;
  width: 60%;
  text-align: center;
}

div.page-body {
  padding-top: 50px;
}

div.top-menu-option {
  margin-top: 10px;
  margin-right: 1px;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 8px;
  text-align: center;
  cursor: pointer;
  width: 12%;
  float: left;
}

div.top-menu-option .badge-container {
  position: relative;
}

div.top-menu-option .badge {
  background: #f40;
  opacity: 0.8;
  position: absolute;
  top: 60%;
  left: 50%;
}

div.top-menu-option-disabled {
  cursor: not-allowed;
  opacity: 0.5;
}

div.top-menu-option:hover, div.top-menu-option:active {
  border-bottom: solid 3px #609AE9;
}

div.top-menu-option.selected {
  border-bottom: solid 3px #609AE9;
}

div.top-menu a {
  text-decoration: none;
  color: $menu-link-colour;
}

div.top-menu-option a:hover, div.top-menu-option a:active {
  color: $headings-color;
}

i.top-menu-icon {
  font-size: 1.7em;
}

.top-menu img {
  vertical-align: top;
  height: 25px;
  width: auto;
}

.logo {
  float: left;
  margin-right: 10px;
  margin-top: 5px;
  background-image: url(<%= asset_path 'logo_long.png' %>);
  background-size: 115px 32px;
  height: 32px;
  width: 115px;
}

.mobile-nav {
  display: none;   
  float: left;
  margin-right: 10px;
  margin-top: 5px;
  height: 32px;
  width: 115px;
  font-size: 24px;
  color: #fff;
  cursor: pointer;
}

@media only screen and (max-width: 480px), only screen and (max-device-width: 480px) {
  footer {
    opacity: 0.0;
  }
}

@media only screen and (max-width: 720px), only screen and (max-device-width: 720px) {
  .logo {
    display: none;
  }
  .top-menu {
    display: none;
  }
  .mobile-nav {
    display: inline;
  }
}

ul.dropdown-menu li.disabled {
  cursor: not-allowed;
  opacity: 0.5;
}