- if vouchers.any?
  %table.table.table-striped.table-hover
    %thead
      %th Name
      %th Code
      %th Duration
      %th Discount
      %th Expiry
      %th Applied By
      %th
    %tbody
      - for voucher in vouchers
        %tr
          %td= voucher.name
          %td= voucher.code
          %td= pluralize(voucher.duration, 'month')
          %td= "#{voucher.discount_percent}%"
          %td= voucher.expires_at || "Never"
          %td= link_to pluralize(voucher.organizations.count, 'customer'), '', 'data-toggle' => "modal", 'data-target' => "#viewCustomers#{voucher.id}"
          %td
            - if expired
              = link_to 'Re-Activate?', '', class: 'btn btn-info', 'data-toggle' => "modal", 'data-target' => "#editVoucher#{voucher.id}"
            - else
              = link_to 'Expire Early?', admin_voucher_path(voucher.id, expires_at: Date.today), class: 'btn btn-info', 'remote' => true, 'data' => { 'method' => :put, 'confirm' => 'Are you sure? Note that customers currently using this discount will still have the discount applied for the original duration.'}

  - for voucher in vouchers
    = render partial: 'edit', locals: {voucher: voucher }
    = render partial: 'customers', locals: {voucher: voucher }
- else
  .push
  .alert.alert-warning No vouchers found.
