.table-responsive
  %table.table.table-hover
    %thead
      %th
        %i.fa.fa-user
      %th
        = t(:name)
      %th
        = t(:email)
      %th
        = t(:roles)
      - if organization.cloud?
        %th Cloud Projects
      %th
    %tbody
      - users.each do |user|
        %tr
          %td= image_tag asset_path("assets/default_user.png"), "class" => "gravatar img-circle", "alt" => "Gravatar", "data-gravatar_hash" => user.gravatar_hash
          %td= link_to user.name, "#user_#{user.id}", 'data-toggle' => 'collapse', 'data-parent' => '#accordionUsers'
          %td= mail_to user.email, "#{user.email}"
          %td
            %i.fa.fa-key
            = list_of_roles(user)
          - if organization.cloud?
            %td
              %i.fa.fa-folder-o
              - if list_of_projects(user).present?
                = list_of_projects(user)
              - else
                %em None
          %td
            - if can?(:modify, User) && user.id != current_user.id
              %a{href: admin_user_path(user), data: { remote: true, method: :delete, confirm: "Are you sure?"}, class: "btn btn-danger"}
                %i.fa.fa-trash-o
