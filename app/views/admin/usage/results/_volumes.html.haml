- if volumes && volumes.any?
  %div.usage-back
    %h3 Volume Usage
    .table-responsive
      %table.table.table-hover.phone-bill
        %thead
          %tr
            %th.icon
              %i.fa.fa-database
            %th Name
            %th Unique Identifier
            %th Created At
            %th Last Recorded Size
            %th Deleted At
            %th
              %i.fa.fa-clock-o
              Terabyte Hours
            %th
              %i.fa.fa-gbp
              Total
        %tbody
          - volumes.each do |volume|
            %tr
              %td &nbsp;
              %td= volume[:name]
              %td= volume[:id]
              %td= volume[:created_at]
              %td
                = volume[:latest_size]
                GB
              %td= volume[:deleted_at] ? volume[:deleted_at] : '-'
              %td
                = number_with_delimiter(volume[:terabyte_hours], :delimiter => ',')
                TBh
              %td== £#{number_with_precision((volume[:terabyte_hours] * RateCard.block_storage).round(2), :delimiter => ',', :separator => '.', :precision => 2)}
          %tr.highlight.bottomline
            %td &nbsp
            %td &nbsp
            %td &nbsp
            %td &nbsp
            %td &nbsp;
            %td Total:
            %td
              = number_with_delimiter(volumes.collect{|v| v[:terabyte_hours]}.sum.round(2), :delimiter => ',')
              TBh
            %td
              == £#{number_with_precision((volumes.collect{|v| v[:terabyte_hours]}.sum * RateCard.block_storage).round(2), :delimiter => ',', :separator => '.', :precision => 2)}

