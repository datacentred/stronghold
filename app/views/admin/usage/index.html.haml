.container

  - if request.post?

    %h1
      %i.fa.fa-area-chart
      = @project.organization.name
    %p
      %strong Project:
      = @project.name
    %p
      %strong From:
      = @from_date
    %p
      %strong To:
      = @to_date

    = render partial: 'admin/usage/results/instances', locals: { instances:         @instance_results            }
    = render partial: 'admin/usage/results/volumes',   locals: { volumes:           @volume_results              }
    = render partial: 'admin/usage/results/images',    locals: { images:            @image_results               }
    = render partial: 'admin/usage/results/objects',   locals: { tbh:               @object_storage_results      }
    = render partial: 'admin/usage/results/ips',       locals: { ip_quotas:         @ip_quota_results,                                                           external_gateways: @external_gateway_results    }
  - else

    %h1
      %i.fa.fa-area-chart
      Usage Data

    = form_tag(admin_usage_index_path, 'role' => 'form', 'target' => '_blank') do
      .form-group
        %label Organization
        = select_tag :organization, options_for_select(@organizations, selected: params[:organization]), class: 'form-control'
      .form-group
        %label Project
        = select_tag :project, options_for_select(@projects, selected: params[:project]), class: 'form-control'
      .form-group
        %label From Date
        = datetime_select :from, nil, default: @from_date, class: 'form-control', minute_step: 15
      .form-group
        %label To Date
        = datetime_select :to, nil, default: @to_date, class: 'form-control', minute_step: 15

      = submit_tag 'Generate â†’', class: 'btn btn-primary'
