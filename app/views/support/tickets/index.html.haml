.container-fluid{:'ng-controller' => "TicketsController", :'ng-init' => 'getTickets()'}

  .col-xs-12
    .page-controls
      %button.btn.btn-primary.btn-xs
        %i.fa.fa-edit
        New Ticket

  .col-xs-12
    .some-info{:'ng-show' => "isLoading()"}
      %p
        %i.fa.fa-refresh.fa-spin
      %p
        Loading tickets...
    .some-info{:'ng-show' => "!isLoading() && !hasTickets()"}
      %p
        %i.fa.fa-square-o
      %p
        There are no tickets.
      %p
        Click &ldquo;New Ticket&rdquo;.

  .col-xs-6
    %div{:'ng-show' => "hasTickets()"}
      %tabset
        %tab{:'ng-repeat' => "status in statuses | orderBy:'-name'", :heading => '{{status.name}}'}
          = render partial: 'shared/tickets_list'

  .col-xs-6
    .some-info.ticket{:'ng-show' => "!selectedTicket && !isLoading() && hasTickets()"}
      %p
        %i.fa.fa-info-circle
      %p
        Select a ticket.
    %div{:'ng-show' => "selectedTicket && !isLoading()"}
      = render partial: 'shared/ticket'