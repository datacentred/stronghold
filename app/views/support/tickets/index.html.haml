.container-fluid{:'ng-controller' => "TicketsController", :'ng-init' => 'populateTickets()'}

  .col-xs-12{:'ng-show' => "isLoading()"}
    .some-info
      %p
        %i.fa.fa-refresh.fa-spin
      %p
        Loading tickets...

  %div{:'ng-hide' => "isLoading()"}
    .col-xs-12{:'ng-show' => "hasFailed"}
      .some-info{}
        %p
          %i.fa.fa-warning
        %p
          Great Scott! Our ticket system is down.
        %p
          Our engineers have already fired up the DeLorean &mdash; please check back later.

    %div{:'ng-hide' => "hasFailed"}
      .col-xs-12{:'ng-hide' => "isLoading()"}
        .page-controls
          %button.btn.btn-primary
            %i.fa.fa-edit
            New Ticket

        .some-info{:'ng-hide' => "hasTickets()"}
          %p
            %i.fa.fa-square-o
          %p
            There are no tickets.
          %p
            Click &ldquo;New Ticket&rdquo;.

      .col-xs-6
        %div{:'ng-show' => "hasTickets()"}
          %tabset
            %tab{:'ng-repeat' => "status in statuses | orderBy:'-name'", :heading => '{{status.name}}'}
              = render partial: 'shared/tickets_list'

      .col-xs-6
        .some-info.ticket{:'ng-hide' => "selectedTicket || !hasTickets()"}
          %p
            %i.fa.fa-info-circle
          %p
            Select a ticket.
        %div{:'ng-show' => "selectedTicket"}
          = render partial: 'shared/ticket'