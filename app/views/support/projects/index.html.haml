- title "Cloud Projects"

.pull-right
  = link_to 'New Project', '', class: 'btn btn-success', 'data-toggle' => "modal", 'data-target' => "#addNewProject"

%h2
  %i.fa.fa-folder-o
  Cloud Projects

.table-responsive
  %table.table.table-striped.table-hover
    %thead
      %th Name
      %th UUID
      %th Members
      %th
    %tbody
      - for project in @projects
        %tr
          %td= project.name
          %td= project.uuid
          %td= project.users.uniq.count
          %td
            .pull-right
              = link_to 'Edit', '', class: 'btn btn-default', 'data-toggle' => "modal", 'data-target' => "#editProject#{project.id}", 'remote' => true, 'data' => { 'method' => :put }

              - unless project.staff_project? || project.primary_project?
                = link_to 'Remove', support_project_path(project.id), class: 'btn btn-danger', :data => {:confirm => 'Are you sure? This action cannot be undone.', :method => :delete}
        = render partial: 'edit', locals: {project: project}

= render partial: 'new'