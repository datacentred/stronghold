%h3
  %i.fa.fa-lock
  Please enter a secure password

= form_tag({url: signup_complete_path(@invite.token)}, 'role' => 'form') do
  .form-group
    %label First Name
    = text_field_tag :first_name, @registration.first_name, class: 'form-control'
  .form-group
    %label Last Name
    = text_field_tag :last_name, @registration.last_name, class: 'form-control'
  .form-group
    %label Password
    = password_field_tag :password, @registration.password, class: 'form-control'
  .form-group
    %label Repeat Password
    = password_field_tag :confirm_password, @registration.confirm_password, class: 'form-control'

  .form-group= recaptcha_tags
  
  .form-group
    %label
      By logging in, you agree to our
      = link_to 'Privacy Policy', 'http://datacentred.co.uk/privacy-policy/', target: '_blank'
      \.
  
  = submit_tag 'Log In â†’', class: 'btn btn-primary'