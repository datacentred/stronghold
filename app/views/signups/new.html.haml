%h2
  %i.fa.fa-cloud
  Cloud Services Sign-up

%ol.breadcrumb
  %li Details
  %li.active Payment
  %li.active Confirm

%div#signup-form-area
  = form_tag({url: create_signup_path}, 'role' => 'form') do
    .row
      .col-md-6
        %h3
          %i.fa.fa-user
          About You
        .form-group
          %label First Name
          = text_field_tag :first_name, @customer_signup.first_name, class: 'form-control'
        .form-group
          %label Last Name
          = text_field_tag :last_name, @customer_signup.last_name, class: 'form-control'
        .form-group
          %label Company Name
          = text_field_tag :last_name, @customer_signup.organization_name, class: 'form-control', placeholder: "Leave blank if signing up as an individual"
      .col-md-6
        %h3
          %i.fa.fa-key
          Login Details
        .form-group
          %label E-Mail Address
          = text_field_tag :email, @customer_signup.email, class: 'form-control'
        .form-group
          %label Password
          = password_field_tag :password, @customer_signup.password, class: 'form-control', placeholder: 'ADD PASSWORD POLICY'
        .form-group
          %label Confirm Your Password
          = password_field_tag :confirm_password, @customer_signup.confirm_password, class: 'form-control'
      
    .row
      .col-md-8
