%h2
  %i.fa.fa-cloud
  Sign Up
  
%div#signup-form-area
  = form_tag(create_signup_path, 'role' => 'form') do
    - if flash.present?
      #flashes= display_flash
    .form-group
      %label E-Mail Address
      = text_field_tag :email, @email || @customer_signup.email, class: 'form-control'
    .pull-right
      = link_to 'Already got an account?', sign_in_path
    .form-group
      = submit_tag 'Sign Up', class: 'btn btn-success'
  