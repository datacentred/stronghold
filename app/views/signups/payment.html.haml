%h2
  %i.fa.fa-cloud
  Cloud Services Sign-up

%ol.breadcrumb
  %li.active Details
  %li Payment
  %li.active Confirm

%div#signup-form-area
  = form_tag(take_payment_path, 'role' => 'form', 'id' => 'cc-details') do
    %h3
      %i.fa.fa-credit-card
      Payment Details
    #flashes= display_flash
    = hidden_field_tag :signup_uuid, @customer_signup.uuid
    .form-group
      %label Card Number
      = text_field_tag :card_number, nil, :class => 'form-control', 'data-stripe' => 'number'
    .form-group
      %label CVC
      = text_field_tag :cvc, nil, :size => 4, :class => 'form-control', 'data-stripe' => 'cvc'
    .form-group
      %label Expiry Date
      = text_field_tag :expiry_month, nil, :size => 2, :class => 'form-control', 'data-stripe' => 'exp-month', placeholder: 'MM'
      = text_field_tag :expiry_year, nil, :size => 2, :class => 'form-control', 'data-stripe' => 'exp-year', placeholder: 'YY'
    .form-group
      = submit_tag 'Continue â†’', class: 'btn btn-success'