%ol.breadcrumb
  %li.active Details
  %li Payment
  %li.active Confirm

%div#signup-form-area
  = form_tag(take_payment_path, 'role' => 'form', 'id' => 'cc-details') do
    %h3
      %i.fa.fa-credit-card
      Payment Details
    
    #card-display
    .push
    = hidden_field_tag :signup_uuid, @customer_signup.uuid
    #flashes
    .form-group
      %label Card Number
      = text_field_tag :card_number, nil, :class => 'form-control', 'data-stripe' => 'number'
    .form-group
      %label Name On Card
      = text_field_tag :name, nil, :class => 'form-control', 'data-stripe' => 'name'
    .form-group
      %label CVC
      = text_field_tag :cvc, nil, :size => 4, :class => 'form-control', 'data-stripe' => 'cvc'
    .form-group
      %label Expiry Date
      = text_field_tag :expiry, nil, :class => 'form-control', placeholder: 'MM/YYYY'
    .form-group
      %label Post Code / ZIP
      #lookup-field
    = hidden_field_tag :expiry_month, nil, 'data-stripe' => 'exp-month'
    = hidden_field_tag :expiry_year, nil, 'data-stripe' => 'exp-year'
    = hidden_field_tag :address_line1, nil, 'data-stripe' => 'address_line1'
    = hidden_field_tag :address_line2, nil, 'data-stripe' => 'address_line2'
    = hidden_field_tag :address_city, nil, 'data-stripe' => 'address_city'
    = hidden_field_tag :postcode, nil, 'data-stripe' => 'address_zip'

    .form-group
      = submit_tag 'Continue â†’', class: 'btn btn-success'
