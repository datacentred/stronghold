.top-menu
  - if can? :read, Role
    %a{href: support_roles_path}
      .top-menu-option{'data-toggle' => "tooltip", 'data-placement' => "bottom", 'title' => t(:users_slash_roles), 'class' => (current_section == 'roles' ? 'selected' : '')}
        %i.top-menu-icon.fa.fa-users
  - else
    .top-menu-option.top-menu-option-disabled{'data-toggle' => "tooltip", 'data-placement' => "bottom", 'title' => t(:users_slash_roles)}
      %i.top-menu-icon.fa.fa-users
  - if can? :read, Ticket
    %a{href: support_tickets_path}
      .top-menu-option{'data-toggle' => "tooltip", 'data-placement' => "bottom", 'title' => t(:support), 'class' => (current_section == 'tickets' ? 'selected' : '')}
        %i.top-menu-icon.fa.fa-life-ring
  - else
    .top-menu-option.top-menu-option-disabled{'data-toggle' => "tooltip", 'data-placement' => "bottom", 'title' => t(:support_tickets)}
      %i.top-menu-icon.fa.fa-life-ring
  %a{href: 'http://status.datacentred.io', target: '_blank'}
    .top-menu-option{'data-toggle' => "tooltip", 'data-placement' => "bottom", 'title' => t(:status)}
      %i.top-menu-icon.fa.fa-check-circle
  .not-yet-enabled
    .top-menu-option.top-menu-option-disabled{'data-toggle' => "tooltip", 'data-placement' => "bottom", 'title' => t(:instances)}
      %i.top-menu-icon.fa.fa-rocket
    .top-menu-option.top-menu-option-disabled{'data-toggle' => "tooltip", 'data-placement' => "bottom", 'title' => t(:storage)}
      %i.top-menu-icon.fa.fa-database
    .top-menu-option.top-menu-option-disabled{'data-toggle' => "tooltip", 'data-placement' => "bottom", 'title' => t(:colo)}
      = image_tag('server.svg')
    .top-menu-option.top-menu-option-disabled{'data-toggle' => "tooltip", 'data-placement' => "bottom", 'title' => t(:billing)}
      %i.top-menu-icon.fa.fa-money
    .top-menu-option.top-menu-option-disabled{'data-toggle' => "tooltip", 'data-placement' => "bottom", 'title' => t(:metrics)}
      %i.top-menu-icon.fa.fa-dashboard