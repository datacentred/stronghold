%table.table
  %thead
    %th.status-head
    %th
      Ticket
  %tbody{:'ng-repeat' => ("ticket in tickets['" + status + "']")}
    %tr
      %td.status
        %i.fa.fa-circle{:style => "color: {{statuses['" + status + "'].color;}}"}
      %td
        =link_to "({{ticket.attrs.key}}) {{ticket.attrs.fields.summary}}", "", {:'ng-click' => 'showTicket(ticket)'}