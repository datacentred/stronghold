.mobile-nav
  %i.fa.fa-bars.dropdown-toggle#mob-menu{:type => "button", :'data-toggle' => "dropdown", :'dropdown-toggle' => ""}
  %ul.dropdown-menu{:role => "menu"}
    %li
      %a{href: support_root_path}
        %i.fa.fa-home
        Home
    %li.divider
    - if current_user.organization.known_to_payment_gateway?
      - if can? :read, Role
        %li
          %a{href: support_roles_path}
            %i.fa.fa-users
            = 'Team'
      - else
        %li.disabled
          %a{href: ''}
            %i.fa.fa-users
            = t(:users_slash_roles)

    - if can? :read, Ticket
      %li
        %a{href: support_tickets_path}
          %i.fa.fa-life-ring
          = t(:support)
    - else
      %li.disabled
        %a{href: ''}
          %i.fa.fa-life-ring
          = t(:support)

    - if current_user.organization.cloud?
      - if can? :read, :usage
        %li
          %a{href: support_usage_path}
            %i.fa.fa-area-chart
            = t(:usage)
      - else
        %li.disabled
          %a{href: ''}
            %i.fa.fa-area-chart
            = t(:usage)

      - if current_user.organization.known_to_payment_gateway?
        - if can?(:read, :cloud) || can?(:read, :storage)
          %li
            %a{href: '', 'data-toggle' => "modal", 'data-target' => "#showOpenStackDetails"}
              %i.fa.fa-cloud
              Cloud Services
      - else
        %li.disabled
          %a{href: ''}
            %i.fa.fa-cloud
            Cloud Services